<resources>
    <style name="AppThemeActionBar" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:dialogCornerRadius">24dp</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>
        <item name="alertDialogTheme">@style/alertDialogTheme</item>
        <item name="switchPreferenceCompatStyle">@style/switchPreferenceCompatStyle</item>
        <item name="actionOverflowMenuStyle">@style/actionOverflowMenuStyle</item>
        <item name="android:fontFamily">@font/font_poppins</item>
    </style>
    <style name="alertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:dialogCornerRadius">24dp</item>
    </style>
</resources>