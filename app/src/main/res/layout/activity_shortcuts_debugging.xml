<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <me.zhanghai.android.fastscroll.FastScrollScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/card_view_ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*"
                android:showDividers="middle">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.Material3.TitleLarge"
                        android:textAlignment="center"
                        android:text="@string/shortcuts_title"
                        android:layout_margin="16dp"
                        app:fontFamily="@font/font_poppins"/>
                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.Material3.TitleLarge"
                        android:textAlignment="center"
                        android:text="@string/description"
                        android:layout_margin="16dp"
                        app:fontFamily="@font/font_poppins"/>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Shift + F9"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/debug"/>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="F8"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/step_over"/>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="F7"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/step_into"/>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Shift + F7"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/smart_step_into"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Shift + F8"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/step_out"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Alt + F9"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/run_to_cursor"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Alt + F8"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/evaluate_expression"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="F9"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/resume_program"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Ctrl + F8"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/toggle_breakpoint"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:divider="?attr/colorAccent"
                    android:showDividers="middle">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="Ctrl + Shift + F8"
                        tools:ignore="HardcodedText"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_margin="16dp"
                        android:text="@string/view_breakpoints"/>
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </me.zhanghai.android.fastscroll.FastScrollScrollView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_ad"
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="FULL_BANNER"
            ads:adUnitId="ca-app-pub-5294151573817700/4974008668"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>