<me.zhanghai.android.fastscroll.FastScrollScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_view_languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_language"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.Material3.TitleLarge"
            android:id="@+id/text_view_current_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="24dp"
            app:fontFamily="@font/font_poppins"
            app:layout_constraintTop_toBottomOf="@id/image_view_languages"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommended"
            android:layout_marginTop="24dp"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintTop_toBottomOf="@id/text_view_current_language"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_recommended"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_view_all_languages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/all_languages"
            android:layout_marginTop="24dp"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintTop_toBottomOf="@id/button_default"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_all_languages"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_ro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Română"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_en"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deutsch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_ro"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_es"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Español"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_de"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_fr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Français"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_es"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_hi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="हिन्दी"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_fr"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indonesia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_hi"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_it"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Italiano"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_in"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_ja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日本語"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_it"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_ru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Русский"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_ja"
            tools:ignore="HardcodedText"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:id="@+id/button_language_tr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Türkçe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_language_ru"
            tools:ignore="HardcodedText"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/button_language_ru"
            app:lottie_autoPlay="true"
            app:lottie_speed="0.48"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/anim_google_translate"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</me.zhanghai.android.fastscroll.FastScrollScrollView>