<resources>
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>
    <style name="AppTheme" parent="@style/AppThemeActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="actionBarStyle">@style/ActionBarTheme</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="bottomNavigationStyle">@style/Bottom</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuTheme</item>
        <item name="android:fontFamily">@font/font_poppins</item>
    </style>
    <style name="ShapeAppearanceOverlay.CardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="FontTheme" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/font_poppins</item>
        <item name="android:fontFamily">@font/font_poppins</item>
    </style>
    <style name="ActionBarTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@android:color/transparent</item>
    </style>
    <style name="Bottom" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="background">?attr/colorPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
    <style name="OverflowMenuTheme" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/background_overflow</item>
    </style>
    <style name="SwitchTheme" parent="Widget.Material3.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
    </style>
    <style name="AppBarLayoutTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
</resources>